body {
  color:#333;
  font-family: verdana, sans-serif;
  margin: 0px;
}

header{
  background-color: pink;
  text-align: right;
  padding: 10px;
}

ul {
  margin: 0px;
  list-style-type: none;
  padding-left: 0;
}

li {
  display: inline-block;
  padding: 4px 8px;
  font-size:12px;
}

a {
  text-decoration: none;
  color: inherit;
}

 a:hover{
   color: royalblue;
 }
